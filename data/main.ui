<interface>
  <menu id="zoom-menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Zoom _In</attribute>
        <attribute name="action">win.zoom</attribute>
        <attribute name="target">in::step</attribute>
        <attribute name="accel">&lt;Primary&gt;equal</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Zoom _Out</attribute>
        <attribute name="action">win.zoom</attribute>
        <attribute name="target">out::step</attribute>
        <attribute name="accel">&lt;Primary&gt;minus</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Normal Size</attribute>
        <attribute name="action">win.zoom</attribute>
        <attribute name="target">normal</attribute>
        <attribute name="accel">&lt;Primary&gt;0</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">Best _Fit</attribute>
        <attribute name="action">win.zoom</attribute>
        <attribute name="target">best-fit</attribute>
        <attribute name="accel">f</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Fit _Width</attribute>
        <attribute name="action">win.zoom</attribute>
        <attribute name="target">fit-width</attribute>
        <attribute name="accel">w</attribute>
      </item>
    </section>
  </menu>
  <object id="main-window" class="GtkApplicationWindow">
    <property name="title">Lumee</property>
    <property name="default-width">800</property>
    <property name="default-height">500</property>
    <property name="window-position">GTK_WIN_POS_CENTER</property>
    <child type="titlebar">
      <object id="header-bar" class="GtkHeaderBar">
        <property name="show-close-button">true</property>
        <child>
          <object id="open-button" class="GtkButton">
            <property name="action-name">win.open</property>
            <property name="tooltip-text" translatable="yes">Open folder</property>
            <child>
              <object id="open-button-image" class="GtkImage">
                <property name="icon-name">folder-symbolic</property>
                <property name="icon-size">1</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object id="zoom-menu-button" class="GtkMenuButton">
            <property name="menu-model">zoom-menu</property>
            <property name="tooltip-text" translatable="yes">Zoom options</property>
            <child>
              <object id="zoom-menu-box" class="GtkBox">
                <child>
                  <object id="zoom-label" class="GtkLabel">
                    <property name="width-chars">5</property>
                  </object>
                </child>
                <child>
                  <object id="zoom-arrow" class="GtkArrow">
                    <property name="arrow-type">GTK_ARROW_DOWN</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack-type">end</property>
          </packing>
        </child>
      </object>
    </child>
    <child>
      <object id="grid" class="GtkGrid">
        <child>
          <object id="scrolled-window" class="GtkScrolledWindow">
            <property name="min-content-width">119</property>
            <child>
              <object id="list-view" class="GtkTreeView">
                <property name="name">file-list</property>
                <property name="vexpand">true</property>
                <property name="headers-visible">false</property>
                <property name="enable-search">false</property>
                <child internal-child="selection">
                  <object id="list-selection" class="GtkTreeSelection">
                    <property name="mode">GTK_SELECTION_BROWSE</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object id="image-view" class="GtkScrolledWindow">
            <child>
              <object id="image" class="GtkImage">
                <property name="hexpand">true</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
